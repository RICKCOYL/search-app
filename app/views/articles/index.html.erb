<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="card">
      <div class="card-body">
        <h2 class="card-title mb-4">Article Search</h2>
        
        <div class="search-container mb-4">
          <input type="text" id="search-input" class="form-control form-control-lg" placeholder="Search articles..." autocomplete="off">
          <div class="spinner-border text-primary search-spinner d-none" role="status">
            <span class="visually-hidden">Loading...</span>
          </div>
        </div>
        
        <div id="search-results" class="mt-4">
          <div class="article-list">
            <% @articles.each do |article| %>
              <div class="article-item card mb-3">
                <div class="card-body">
                  <h5 class="card-title"><%= article.title %></h5>
                  <p class="card-text"><%= truncate(article.content, length: 150) %></p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
